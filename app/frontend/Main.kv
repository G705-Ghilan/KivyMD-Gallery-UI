									text: "{ PROJECTS }"
									adaptive_height: True
									theme_text_color: "Hint"
						
						MDGridLayout:
							id: grid
							cols: 2
							size_hint_y: None
							height: "500dp"
							spacing: 25
							padding: '30dp', '40dp', '30dp', '20dp'
							#md_bg_color: hex("#679966")
							#adaptive_height: True
							Project:					
								title: "Kivymd"
								info: "editor, run, UI"
								source: "app/images/editor.png"
								on_release: root.manager.current = "KivymdEditor"
								
							Project:
								title: "LogIn"
								info: "beautiful, login"
								source: "app/images/login-user.png"
								
							Project:
								title: "Icons"
								info: "icons, search"
								source: "app/images/icons.png"
								on_release: root.manager.current = "Icons"
								
							Project:
								title: "Widget"
								info: "kivy + md, widget"
								source: "app/images/widget.png"
								
							Project:
								title: "Python"
								info: "editor, python"
								source: "app/images/py-code.png"
								
							Project:
								info: "plus, ..."
								title: "calculator"
								source: "app/images/calculator.png"
								on_release: root.manager.current = "Calculator"
		
		
			