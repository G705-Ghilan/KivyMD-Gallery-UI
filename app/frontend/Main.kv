# clean  code !

<Project@MDCard>:
	radius: 50
	#size_hint: .4, .5
	adaptive_height: True
	orientation: 'vertical'
	ripple_behavior: True
	md_bg_color: hex(app.theme['box'])
	padding: '10dp', '10dp', '10dp', '0dp'
	# properties ...
	source: ""
	title: ""
	info: ""
	
	Image:
		source: root.source
		
	MDBoxLayout:
		size_hint_y: 1
		orientation: 'vertical'
		padding: '0dp', '10dp', '0dp', '0dp'
		
		MDLabel:
			bold: True
			text: root.title
			halign: "center"
			adaptive_height: True
			
		MDLabel:
			halign: "center"
			text: root.info
			adaptive_height: True
			theme_text_color: "Hint"
			
		MDBoxLayout:			
	

<Main>:
	MDBoxLayout:
		md_bg_color: hex(app.theme['screen'])
		ScrollView:
			bar_width: '0dp'
			MDBoxLayout:
				size_hint_y: None
				height: "680dp"
				MDBoxLayout:
					
					MDBoxLayout:
						orientation: "vertical"
						
						MDBoxLayout:
							id: T
							size_hint_y: None
							height: "180dp"
							orientation: "vertical"
							padding: '30dp', '0dp', '0dp', '0dp'
							
							MDLabel:
								font_style: "H4"
								font_size: "40sp"
								text: "Galley Kivymd"
								adaptive_height: True
								
							MDLabel:
								markup: True
								adaptive_height: True
								theme_text_color: "Hint"
								text: f"[font=Icons]{md_icons['map-marker-question-outline']}[/font] gallery kivy material desgin"
								
